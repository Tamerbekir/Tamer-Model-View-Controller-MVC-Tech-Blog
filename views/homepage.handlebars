<h1>Welcome to the Tech Blog!</h1>

{{#if loggedIn}}
    <p>Hello, {{username}}! Check out the latest blog posts below.</p>
{{else}}
    <p>Please <a href="/login">log in</a> or <a href="/login">sign up</a> to view and create blog posts.</p>
{{/if}}

<div class="blog-posts">
    {{#each posts}}
        <div class="blog-post">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <p>Posted by {{this.author}} on {{format_date this.createdAt}}</p>
        </div>
    {{/each}}
</div>
